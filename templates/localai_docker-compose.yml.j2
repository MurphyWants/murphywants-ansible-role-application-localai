services:
  api:
    image: localai/localai:latest-aio-gpu-nvidia-cuda-12
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/readyz"]
      interval: 1m
      timeout: 20m
      retries: 5
    ports:
      - "127.0.0.1:{{ LOCALAI_HTTP_PORT }}:8080"
    environment:
      - DEBUG=false
    volumes:
      - "{{ LOCALAI_PATH }}/volumes/localai-models:/build/models:cached"
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [gpu]